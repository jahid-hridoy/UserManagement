@model IEnumerable<UserViewModel>
@{
    ViewBag.Title = "User List";
    var selectedRole = ViewBag.SelectedRole as string;
    var roles = ViewBag.Roles as List<string>;
}

<h2 class="mb-4 text-primary">User List</h2>

<form method="get" class="mb-4">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <label for="role" class="col-form-label fw-bold">Filter by Role:</label>
        </div>
        <div class="col-auto">
            <select id="role" name="role" class="form-select" onchange="this.form.submit()">
                <option value="">All</option>
                @foreach (var role in roles)
                {
                    <option value="@role" selected="@(role == selectedRole ? "selected" : null)">
                        @role
                    </option>
                }
            </select>
        </div>
    </div>
</form>

<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-light">
    <tr>
        <th scope="col">Full Name</th>
        <th scope="col">Role</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FullName</td>
            <td>@user.Role</td>
        </tr>
    }
    </tbody>
</table>
